<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LearnToShame.ViewModels"
             xmlns:helpers="clr-namespace:LearnToShame.Helpers"
             xmlns:views="clr-namespace:LearnToShame.Views"
             x:DataType="vm:StatisticsViewModel"
             x:Class="LearnToShame.Views.StatisticsPage"
             Title="{Binding Source={StaticResource L}, Path=Statistics}"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#0d0d0d}">

    <Grid RowDefinitions="Auto, Auto, *" Padding="20" RowSpacing="12">
        <Label Grid.Row="0" Text="{Binding Source={StaticResource L}, Path=Statistics}"
               FontSize="22" FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
        <Label Grid.Row="1" Text="{Binding Source={StaticResource L}, Path=Stats_ChartCaption}"
               FontSize="12" Opacity="0.7"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
        <Border Grid.Row="2" StrokeThickness="0" Padding="0"
                BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1a1a1a}"
                VerticalOptions="FillAndExpand">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            <views:InteractiveSessionChartView x:Name="InteractiveChart" VerticalOptions="FillAndExpand" />
        </Border>
    </Grid>
</ContentPage>
