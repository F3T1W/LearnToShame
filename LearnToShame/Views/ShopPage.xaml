<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LearnToShame.ViewModels"
             xmlns:helpers="clr-namespace:LearnToShame.Helpers"
             x:DataType="vm:ShopViewModel"
             x:Class="LearnToShame.Views.ShopPage"
             Title="{Binding Source={StaticResource L}, Path=PointsShop}">

    <VerticalStackLayout Spacing="28" Padding="48" VerticalOptions="Center">
        <Label Text="{Binding Source={StaticResource L}, Path=YourPoints}" HorizontalOptions="Center" FontSize="26"/>
        <Label Text="{Binding Points}" FontSize="72" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource Primary}"/>
        
        <Button Text="{Binding Source={StaticResource L}, Path=BuySessionButton}" 
                Command="{Binding BuySessionCommand}"
                HorizontalOptions="Center"
                HeightRequest="64"
                Margin="0,24,0,0">
            <Button.Behaviors>
                <helpers:ButtonPressAnimationBehavior />
            </Button.Behaviors>
        </Button>

        <Button Text="{Binding Source={StaticResource L}, Path=AddPreTrigger}"
                Command="{Binding PickPreTriggerCommand}"
                HorizontalOptions="Center"
                HeightRequest="48"
                Margin="0,16,0,0">
            <Button.Behaviors>
                <helpers:ButtonPressAnimationBehavior />
            </Button.Behaviors>
        </Button>
        <Button Text="{Binding Source={StaticResource L}, Path=AddTrigger}"
                Command="{Binding PickTriggerCommand}"
                HorizontalOptions="Center"
                HeightRequest="48"
                Margin="0,8,0,0">
            <Button.Behaviors>
                <helpers:ButtonPressAnimationBehavior />
            </Button.Behaviors>
        </Button>
        <Label Text="{Binding ContentStatusText}" HorizontalOptions="Center" FontSize="14" TextColor="Gray"/>

        <Button Text="{Binding Source={StaticResource L}, Path=HowItWorks}"
                Command="{Binding ShowHowItWorksCommand}"
                HorizontalOptions="Center"
                HeightRequest="40"
                Margin="0,12,0,0"
                BackgroundColor="Transparent"
                TextColor="Gray"/>

        <Label Text="{Binding Source={StaticResource L}, Path=SessionsHelp}" 
               HorizontalOptions="Center" 
               TextColor="Gray"
               FontSize="20"/>
    </VerticalStackLayout>

</ContentPage>
